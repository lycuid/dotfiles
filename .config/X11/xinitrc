# vim: ft=sh

xdir=$(dirname $0)
[ -f "$xdir/Xresources" ] && xrdb -load "$xdir/Xresources"

xsetroot -cursor_name left_ptr &
xset r rate 300 50 &
xset s on &
xset s 165 180 &
xss-lock -- slock &

mkdir -p "$XDG_RUNTIME_DIR"/pipe
volume '0%' &
dunst &
sxhkd &
picom -b &
$HOME/.fehbg &

# https://github.com/xmonad/xmonad/issues/164
rm -rf $HOME/.xmonad

exec xmonad
