" vim: filetype=vim

filetype plugin indent on
syntax on

set nocompatible
set autoindent
set nu rnu
set t_Co=256
set mouse=a                       " mouse click navigation.
set encoding=utf-8
set et ts=2 sw=2 sts=2
set hlsearch incsearch            " highlight search as you type.
set fileformat=unix
set list listchars=tab:--,eol:Â¬
set noshowcmd
set nobackup nowritebackup noswapfile noundofile

" https://github.com/vim/vim/issues/993#issuecomment-255651605
let &t_8f="\<Esc>[38;2;%lu;%lu;%lum"  " set foreground color
let &t_8b="\<Esc>[48;2;%lu;%lu;%lum"  " set background color

command! -nargs=1 GFindall silent vimgrep /<args>/gj `git ls-files` <bar> cwin <bar> redraw
nnoremap <a-;> :GFindall<space>

nnoremap <leader>t :tabnew<cr>
nnoremap ,, :noh<CR>

nnoremap <c-j> <c-e>
nnoremap <c-k> <c-y>
nnoremap <c-h> :bp<cr>
nnoremap <c-l> :bn<cr>

command W w
command Q q

autocmd Filetype xdefaults autocmd BufWritePost <buffer> silent !xrdb $XDG_CONFIG_HOME/X11/Xresources

runtime vimrc.d/build_systems.vim
runtime vimrc.d/code_formatting.vim
